{
  "manifest_version": 2,
  "name": "Kasper's First Extension",
  "description": "This is my first attempt at a browser extension!",
  "version": "0.1",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file://*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "128": "images/icon.png"
  }
}
